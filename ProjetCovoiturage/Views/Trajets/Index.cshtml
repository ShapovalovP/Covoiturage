@model IEnumerable<ProjetCovoiturage.Models.Trajet>

@{
    ViewBag.Title = ProjetCovoiturage.Resources.Views.Trajet.Index;
}

<h2>@ProjetCovoiturage.Resources.Views.Trajet.Index</h2>

<p>
    @Html.ActionLink(ProjetCovoiturage.Resources.Views.Trajet.Add, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Chauffeur.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VilleDepart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointDepart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointArrive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VilleDestination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeureDepart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeureArrivee)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Chauffeur.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VilleDepart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointDepart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointArrive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VilleDestination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeureDepart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeureArrivee)
        </td>
        <td>
            @Html.ActionLink(ProjetCovoiturage.Resources.Views.Trajet.Edit, "Edit", new { id = item.Id }) |
            @Html.ActionLink(ProjetCovoiturage.Resources.Views.Trajet.Details, "Details", new { id = item.Id }) |
            @Html.ActionLink(ProjetCovoiturage.Resources.Views.Trajet.Delete, "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
