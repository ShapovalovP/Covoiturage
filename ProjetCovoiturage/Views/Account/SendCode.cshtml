@model ProjetCovoiturage.Models.SendCodeViewModel
@{
    ViewBag.Title = ProjetCovoiturage.Resources.Views.Account.Send;
}

<h2>@ProjetCovoiturage.Resources.Views.Account.Send</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@ProjetCovoiturage.Resources.Views.Account.SendCode</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @ProjetCovoiturage.Resources.Views.Account.Select
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="@ProjetCovoiturage.Resources.Views.Account.Send" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
